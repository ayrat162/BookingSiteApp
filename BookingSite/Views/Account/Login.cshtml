@model BookingShared.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

@if (TempData["Message"] != null)
{
    <div class="text-warning">
        Message: @TempData["Message"]
    </div> 
    
}

<h1>Login</h1>

<div class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post" asp-controller="Account" asp-action="Login">
        <div class="form-group col-md-3">
            <label asp-for="Username" class="control-label col-md-2"></label><br />
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Password" class="control-label col-md-2"></label><br />
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3" hidden="hidden">
            <label asp-for="ReturnUrl" class="control-label col-md-2"></label><br />
            <input asp-for="ReturnUrl" class="form-control" />
            <span asp-validation-for="ReturnUrl" class="text-danger"></span>
        </div>
        <div class="form-check col-md-3">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe" class="control-label"></label>
        </div>

        <div class="form-check col-md-3">
            <input type="submit" value="Login" class="btn btn-info" />
        </div>
    </form>
</div>