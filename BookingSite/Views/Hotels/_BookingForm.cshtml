@model BookingShared.ViewModels.BookingFormViewModel;

@{
    Layout = null;
}

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />

<div class="modal-content">
    <form method="post" asp-controller="Book" asp-action="Room" class="m-3">
        <div class="form-group col">
            <label asp-for="RoomNumber" class="control-label"></label><br />
            <input asp-for="RoomNumber" class="form-control" />
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="RoomId" class="control-label"></label><br />
            <input asp-for="RoomId" class="form-control" />
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="BeginDate"></label>
            <div class="input-group date" id="BeginDate" data-target-input="nearest">
                <input type="text" class="form-control datetimepicker-input" data-target="#BeginDate" />
                <div class="input-group-append" data-target="#BeginDate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
            <span asp-validation-for="BeginDate" class="text-danger"></span>
        </div>
        <div class="form-group col">
            <label asp-for="EndDate"></label>
            <div class="input-group date" id="EndDate" data-target-input="nearest">
                <input type="text" class="form-control datetimepicker-input" data-target="#EndDate" />
                <div class="input-group-append" data-target="#EndDate" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-check col">
            <input type="submit" value="Book this Room" class="btn btn-info" />
        </div>
    </form>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#BeginDate').datetimepicker({
            format: 'L'
        });
        $('#EndDate').datetimepicker({
            format: 'L'
        });
    });
</script>